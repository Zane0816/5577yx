<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SdPay</title>
    <link href="~/Scripts/Admin/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Style/Admin/style.css" rel="stylesheet" />
    <link href="~/Style/Admin/pagination.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/AdminFunction.js"></script>
    <script>
        GetAllGame();
    </script>
</head>
<body>
    <div class="navigation">
        首页 &gt; 内容管理&gt; 充值管理&gt; 手动充值
    </div>
    <div class="tools_box">
        <div class="tools_bar">
            <div class="search_box">
            </div>
        </div>
    </div>
    <!--列表展示.开始-->
    <div class="photo_list4 clearfix">
        <div class="box">
            <a href="javascript:;">手动充值游戏币：</a>
            <table>
                <tr>
                    <td>充值类型：
                    </td>
                    <td>
                        <select id="czlx" class="select2" onchange="onlxchange()">
                            <option value="1">游戏币</option>
                            <option value="2">平台币</option>
                        </select>
                    </td>
                    <td>
                        <span id="txtqf">游戏及服务器：</span>
                    </td>
                    <td>
                        <select id="Selyx" class="select2" onchange="onyxchange()">
                            <option value="0">请选择游戏</option>
                        </select>
                    </td>
                    <td>
                        <select id="Selfwq" class="select2">
                            <option value="0">请选择服务器</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>充值金额:
                    </td>
                    <td>
                        <input id="Money" type="text" /><br />
                    </td>
                    <td colspan="3">
                        <span style="color: Red" id="MoneyTs">单位：RMB/元</span>
                    </td>
                </tr>
                <tr>
                    <td>充值密码:
                    </td>
                    <td>
                        <input type="password" id="PWD" name="PWD" value="" /><br />
                    </td>
                    <td colspan="3">
                        <span style="color: Red" id="PWDTs"></span>
                    </td>
                </tr>
                <tr>
                    <td>用户名称:
                    </td>
                    <td>
                        <input id="UserName0" type="text" name="UserName" onblur="uschange('0')" value="" />
                    </td>
                    <td colspan="3">
                        <span>
                            <img id="txtnameimg0" alt="" src="~/Images/Admin/tj.png" onclick="czNum()" style="width: 15px; height: 15px;" /><span id="txtnamelbl0" style="color: #F7654B"></span></span>
                    </td>
                </tr>
                <tr id="more">
                    <td></td>
                    <td colspan="4" id="moreus"></td>
                </tr>
                <tr>
                    <td>充值备注:
                    </td>
                    <td>
                        <textarea id="Bz" cols="20" rows="2"></textarea>
                    </td>
                    <td colspan="3">
                        <span style="color: Red" id="BzTs"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" style="text-align: center">
                        <input type="button" value="确定" onclick="tjOrder()" /><br />
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
            <div class="clear">
            </div>
        </div>
    </div>
    <div class="left" id="czjg">
    </div>
</body>
</html>
